<% layout("/layouts/boilerPlate.ejs")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" class="form-control" type="text" required>
            <div class="valid-feedback">looks good!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description of destination" 
        class="form-control" required></textarea>
            <div class="valid-feedback">looks good!</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" class="form-control" type="file" required>
        </div>
        
        <div class="row">
         <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control" required >
            <div class="invalid-feedback">
                please enter valid Price.
            </div>
        </div>
        
        <div class="mb-3 col-md-8" >
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India" class="form-control" required type="text">
            <div class="invalid-feedback">
                please enter the valid Country.
            </div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">
                Location
            </label>
            <input name="listing[location]" placeholder="Jaipur,Rajasthan" class="form-control" required type="text">
            <div class="invalid-feedback">
                please enter the valid Location.
            </div>
        </div>
        <div class="mb-3">
            <select class="form-select form-select-sm" aria-label="Small select example" name="listing[category]">
                <option selected>Select Category</option>
                <option value="Trending">Trending</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic cities">Iconic cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Arctic">Arctic</option>
                <option value="Domes">Domes</option>
                <option value="Boats">Boats</option>
            </select>
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3" > Add </button>
        <br>
        <br>
    </form>
</div>
</div>
</body>
